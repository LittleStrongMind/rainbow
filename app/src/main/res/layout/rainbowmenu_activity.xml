<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prism."
        android:gravity="center_horizontal"
        android:id="@+id/prism_logo"
        android:textSize="40dp"
        android:textColor="#9796a6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/build_version"
        android:textColor="#9796a6"
        android:text="v666"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:padding="10dp"/>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/build_version"
        android:scrollbarSize="4dp"
        android:scrollbarThumbVertical="@drawable/scroll_thumb"
        android:fastScrollEnabled="true"
        android:layout_below="@+id/prism_logo"
        android:layout_alignLeft="@+id/prism_logo"
        android:layout_alignStart="@+id/prism_logo"
        android:layout_marginTop="10dp"
        android:id="@+id/scrollView">

        <LinearLayout
            android:id="@+id/logpanel"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="restart server"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/restartserver"
        android:layout_alignBottom="@+id/prism_logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:textColor="#9796a6"
        android:onClick="restart" />


</RelativeLayout>